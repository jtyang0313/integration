/*费用配置*/
.fy_js .t_r{margin-bottom:8px;text-align:right;}
.fy_js .t_r i{font-weight:100;}
.fy_js .fy_th .form-group{margin-bottom:15px;}
.fy_js .fy_th{border-bottom:1px solid #efefef;margin-bottom:15px;display:inline-block;width:100%;}
    /*新建表格样式*/
.table-responsive .tab_box{min-width:750px;margin-bottom:8px;}
.table-responsive li{list-style-type:none;line-height:9px;}
.table-responsive .features_list li{line-height:40px;float:left;text-align:center;border-bottom:1px solid #ddd;}
.table-responsive .features_list li .btn{padding:2px 6px;margin:auto;}
.table-responsive .features .features_list{background:#f0f2f5;overflow:hidden}
.table-responsive ul{padding:0;margin:auto;width:100%;}
.table-responsive .products_columns .product:nth-of-type(even){background:#fbfbfb;}
.table-responsive .features_list li:nth-child(1) {width:6%}
.table-responsive .features_list li:nth-child(2){width:17%}
.table-responsive .features_list li:nth-child(3){width:18%}
.table-responsive .features_list li:nth-child(4){width:18%}
.table-responsive .features_list li:nth-child(5){width:12%}
.table-responsive .features_list li:nth-child(6){width:12%}
.table-responsive .features_list li:nth-child(7){width:17%}
.table-responsive .jt_box {display:block;padding:1.5% 3% 0;border-bottom:1px solid #ddd;font-size:12px;}
.table-responsive .jt_box .pd_bb .features_list li{color:#999;font-weight:lighter;}
.table-responsive .jt_box .features_list li:nth-child(1) {width:30%}
.table-responsive .jt_box .features_list li:nth-child(2){width:35%}
.table-responsive .jt_box .features_list li:nth-child(3){width:35%}
.table-responsive .jt_box h5{margin:0px 10px 6px;font-size:14px;color:#999;font-weight:400;}
.table-responsive .jt_box .th{background:#efefef;}
    /* 弹出*/
.la_fy .ibox-content{padding:1px 20px;border-top:1px solid #ddd;}
.la_fy .ibox-content .tab_for{width:98%;position:relative;left:1%;margin:auto;border:1px solid #ddd;padding:15px;}
.la_fy .ibox-content .tab_for .t_l{float:left;font-size:14px;font-weight:400;color:#333;}
.la_fy .ibox-content .tab_for .t_r{float:right;}
.la_fy .ibox-content .tab_for .table input{height:26px;line-height:26px;}
.la_fy .ibox-content .tab_for .table thead th{padding:8px;}
.la_fy .ibox-content .tab_for .checkbox label, .radio label{padding:0;}

.table2 th{padding:5px 10px; font-weight: 400; background: #f7f7f7; text-align: center;}
.table2 td{padding:3px 10px; color:#222; text-align: center}
.table2 tr td:last-child,.table2 tr td:first-child{text-align: left}
.table2 td .form-control{height:30px;}
.table2 .add,.table2 .del{font-size:20px; display: inline-block; width:25px;height: 25px; text-align: center; line-height: 25px; cursor: pointer; border-radius: 2px;}
.table2 .add:hover,.table2 .del:hover{ background: #f2f2f2; }
.table2 .del{ margin-left: 10px;color:rgba(205,18,53,1.00)}
.table2 .error{color:#ed5565;}
.table2 .preview{font-size:12px; }
.table2 input.error{border:1px solid #ed5565;}

.feJT,.feXQ{ color:#1890ff}
.feJT:hover,.feXQ:hover{ color:#337ab7}

.jt_box2 li{display:inline-block;width:80px;text-align: center;line-height: 22px;}
.jt_box2 .tit li{color:#666; height:24px; background: #f2f2f2;line-height: 24px;text-align: center;}